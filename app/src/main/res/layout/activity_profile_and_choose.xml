<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#98C2E3"
    tools:context=".profileAndChooseActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_person_24"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:backgroundTint="#fff"
        android:background="@drawable/circle"
        android:contentDescription="ProfilePic" />

    <TextView
        android:id="@+id/profileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:width="250dp"
        android:height="30dp"
        android:background="@drawable/rounded"
        android:text="@string/nome_profile"
        android:textAlignment="center"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:width="250dp"
        android:height="30dp"
        android:background="@drawable/rounded"
        android:text="@string/email_profile"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <Button
        android:id="@+id/logOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:backgroundTint="#5A5A5A"
        android:text="@string/sair_da_conta"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="@string/me_recomende_um_a"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="300dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/selectMovie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:src="@drawable/movie_open" />

        <ImageButton
            android:id="@+id/selectBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/selectMovie"
            android:background="#fff"
            android:src="@drawable/lock" />

        <ImageButton
            android:id="@+id/selectShow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectMovie"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#fff"
            android:src="@drawable/lock" />

        <ImageButton
            android:id="@+id/selectCartoon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectBook"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_toEndOf="@id/selectShow"
            android:background="#fff"
            android:src="@drawable/lock" />

    </RelativeLayout>

</LinearLayout>
